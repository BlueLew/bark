<h1 class="text-center mt-4">Restaurants</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-outline-success" %>
  </div>
  <div class="row justify-content-md-center">
    <div class="text-center mt-4"><%= will_paginate @restaurants %></div>
  </div>
  <% if !@restaurants.nil? %>
    <% @restaurants.each do |restaurant| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-success" %></h5>
              <p class="card-text">Rating:<%= restaurant.reviews.average(:rating) %> out of 5 Stars</p>
              <%= link_to 'View', restaurant, class: "btn btn-outline-success" %>
              <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-outline-info" %>
              <%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row justify-content-md-center mb-3">
    <%= will_paginate @restaurants %>
  </div>
</div>
